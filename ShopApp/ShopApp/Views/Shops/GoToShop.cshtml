@model Shop

<h1>@Model.Name</h1>

<h2>All shop items</h2>


<table class="table">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Expiry date</th>
        <th>Actions</th>
    </tr>
    @foreach(var item in @Model.ShopItems)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.ExpiryDate</td>
            <td>@Html.ActionLink("Delete", "DeleteItem", "Items", item) | 
                @Html.ActionLink("Update", "UpdateItem", "Shops", item)
            </td>
        </tr>
    }
</table>
