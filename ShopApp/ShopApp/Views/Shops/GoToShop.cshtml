@model Shop

<h1>@Model.Name</h1>
@Html.ActionLink("Delete", "DeleteShop", "Shops", @Model, new {@class="btn btn-danger"})
@Html.ActionLink("Update", "UpdateShop", "Shops", @Model, new {@class="btn btn-info"})
<h2>All shop items @Html.ActionLink("Add new item", "AddNewItem", "Items", @Model, new {@class="btn btn-info"})</h2>

<table class="table">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Expiry date</th>
        <th>Actions</th>
    </tr>
    @foreach(var item in @Model.ShopItems)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.ExpiryDate</td>
            <td>@Html.ActionLink("Delete", "DeleteItem", "Items", item) | 
                @Html.ActionLink("Update", "UpdateItem", "Shops", item)
            </td>
        </tr>
    }
</table>
