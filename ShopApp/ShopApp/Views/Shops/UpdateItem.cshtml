@model ShopItem

@using (Html.BeginForm("SubmitUpdate", "Shops", FormMethod.Post))
{
    <table class="table table-bordered">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Expiry date</th>
            <th>Shop Id</th>
            <th></th>
        </tr>
        <tr>
            <td>@Html.TextBoxFor(s => s.Id, new {@readonly = "readonly"})</td>
            <td>@Html.TextBoxFor(s => s.Name)</td>
            <td>@Html.TextBoxFor(s => s.ExpiryDate)</td>
            @if(@Model.Shop != null)
            {
                <td><input type="number" name="shopId" value="@Model.Shop.Id"/>
                    <input type="hidden" name="oldShopId" value="@Model.Shop.Id"/>
                    </td>

            }
            else
            {
                <td><input type="number" name="shopId" value=""/></td>
            }
            <td><input type="hidden" name="fromShop" value="@ViewBag.FromShop"/>
                <input type="submit" value="Update"/></td>
        </tr>
    </table>
    
    
}