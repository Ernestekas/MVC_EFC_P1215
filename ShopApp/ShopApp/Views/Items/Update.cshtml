@model ShopApp.Dtos.Items.UpdateItem

@using (Html.BeginForm("Update_InProgress", "Items", FormMethod.Post))
{
    <table class="table table-bordered">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Expiry date</th>
            <th>Shop Id</th>
            <th>Action</th>
        </tr>
        <tr>
            <td>@Html.TextBoxFor(s => s.Id, new {@readonly = "readonly"})</td>
            <td>@Html.TextBoxFor(s => s.Name)</td>
            <td>@Html.TextBoxFor(s => s.ExpiryDate)</td>
            @if(@Model != null)
            {
                @if(@Model.ShopId != 0)
                {
                    <td>@Html.TextBoxFor(s => s.ShopId, new {@type="number" }) </td>
                }
                else
                {
                    <td>@Html.TextBoxFor(s => s.ShopId, new { @type = "number", @value = 0})</td>
                }
            }
            else
            {
                <td>@Html.TextBoxFor(s => s.ShopId, new { @type = "number", @value = 0 })</td>
            }
            <td><input type="submit" value="Update"/></td>
        </tr>
    </table>
    <table>
        <tr>
            <th>Tags</th>
        </tr>
        <tr>
            <td>@Html.ListBoxFor(i => i.SelectedTagsIds, new SelectList(@Model.Tags, "Id", "Name"))</td>
        </tr>
    </table>

    @Html.ValidationSummary(false)
}