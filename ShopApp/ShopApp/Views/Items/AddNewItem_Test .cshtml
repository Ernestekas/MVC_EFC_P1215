@model ShopItem

<table>
    <tr>
        <th>Name</th>
        <th>Expiry Date</th>
        <th>Shop Id</th>
        <th></th>
    </tr>
    @using (Html.BeginForm("SubmitNewItem_Test", "Items", FormMethod.Post))
    {

        <tr>
            <td>@Html.TextBoxFor(i => i.Name)</td>
            <td>@Html.TextBoxFor(i => i.ExpiryDate)</td>
            <td><input type="number" value="0" name="shopId" /></td>
            <td><input type="submit" value="submit" /></td>
        </tr>
        <tr>
            <td>@Html.ValidationMessageFor(i => i.Name)</td>
        </tr>
    }
</table>
